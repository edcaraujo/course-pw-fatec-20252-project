{
  "swagger": "2.0",
  "info": {
    "version": "v1.0.0",
    "title": "Fatecare API",
    "description": "Fatecare API documentation"
  },
  "host": "localhost:3000",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "Auth",
      "description": "Authentication endpoints"
    },
    {
      "name": "User",
      "description": "User endpoints"
    },
    {
      "name": "Patient",
      "description": "Patient endpoints"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "JWT": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization",
      "description": "JWT Authorization header using the Bearer scheme. Example: \"Bearer {token}\""
    }
  },
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "Endpoint to authenticate a user and receive a JWT token.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "User credentials for login.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/LoginSchema"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Authentication successful, JWT token returned.",
            "schema": {
              "$ref": "#/definitions/LoginResponseSuccessSchema"
            }
          },
          "401": {
            "description": "Authentication failed. Invalid credentials or missing fields.",
            "schema": {
              "$ref": "#/definitions/LoginResponseUnauthorizedSchema"
            }
          }
        }
      }
    },
    "/patients/{id}": {
      "get": {
        "tags": [
          "Patient"
        ],
        "description": "Endpoint to get a specific patient by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Patient ID"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Patient found successfully.",
            "schema": {
              "$ref": "#/definitions/PatientResponseSchema"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Patient not found."
          }
        },
        "security": [
          {
            "JWT": []
          }
        ]
      },
      "put": {
        "tags": [
          "Patient"
        ],
        "description": "Endpoint to update an existing patient.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "Patient ID"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Patient infos to update",
            "required": true,
            "schema": {
              "$ref": "#/definitions/PatientSchema"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Patient updated successfully.",
            "schema": {
              "$ref": "#/definitions/PatientResponseSchema"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Patient not found."
          }
        },
        "security": [
          {
            "JWT": []
          }
        ]
      },
      "delete": {
        "tags": [
          "Patient"
        ],
        "description": "Endpoint to delete a patient.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Patient ID"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Patient deleted successfully."
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Patient not found."
          }
        },
        "security": [
          {
            "JWT": []
          }
        ]
      }
    },
    "/patients/": {
      "get": {
        "tags": [
          "Patient"
        ],
        "description": "Endpoint to get all patients.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "List of patients found successfully.",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/PatientResponseSchema"
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "JWT": []
          }
        ]
      },
      "post": {
        "tags": [
          "Patient"
        ],
        "description": "Endpoint to create a new patient.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Patient infos",
            "required": true,
            "schema": {
              "$ref": "#/definitions/PatientSchema"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Patient created successfully.",
            "schema": {
              "$ref": "#/definitions/PatientResponseSchema"
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "JWT": []
          }
        ]
      }
    },
    "/users/{username}": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "Endpoint to get a specific user by username.",
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Username"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "User found successfully.",
            "schema": {
              "$ref": "#/definitions/UserResponseSchema"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "User not found."
          }
        },
        "security": [
          {
            "JWT": []
          }
        ]
      }
    },
    "/users/": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "Endpoint to get all users.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "List of users found successfully.",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/UserResponseSchema"
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "JWT": []
          }
        ]
      },
      "post": {
        "tags": [
          "User"
        ],
        "description": "Endpoint to create a new user.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "User credentials",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserSchema"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created successfully.",
            "schema": {
              "$ref": "#/definitions/UserResponseSchema"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "PatientSchema": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "example": "1288321"
        },
        "name": {
          "type": "string",
          "example": "Matias Orlando"
        }
      },
      "required": [
        "code",
        "name"
      ]
    },
    "PatientResponseSchema": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "1"
        },
        "code": {
          "type": "string",
          "example": "1288321"
        },
        "name": {
          "type": "string",
          "example": "Matias Orlando"
        }
      },
      "required": [
        "id",
        "code",
        "name"
      ]
    },
    "UserSchema": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "example": "eduardo.araujo"
        },
        "password": {
          "type": "string",
          "example": "papinha123"
        }
      },
      "required": [
        "username",
        "password"
      ]
    },
    "UserResponseSchema": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 1
        },
        "username": {
          "type": "string",
          "example": "eduardo.araujo"
        },
        "password": {
          "type": "string",
          "example": "$2b$10$qEjJiPFyRVEQ7W26W/l/GOEfwTHayN7gv/t8UYcW7ElsfavGswuDq"
        }
      },
      "required": [
        "id",
        "username",
        "password"
      ]
    },
    "LoginSchema": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "example": "eduardo.araujo"
        },
        "password": {
          "type": "string",
          "example": "papinha123"
        }
      },
      "required": [
        "username",
        "password"
      ]
    },
    "LoginResponseSuccessSchema": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Login realizado com sucesso!"
        },
        "token": {
          "type": "string",
          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VybmFtZSI6ImVkdWFyZG8uYXJhdWpvIiwiaWF0IjoxNjE2MjM5MDIyLCJleHAiOjE2MTYyNDI2MjJ9.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
        }
      },
      "required": [
        "message",
        "token"
      ]
    },
    "LoginResponseUnauthorizedSchema": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string",
          "example": "Usuário e/ou senha inválidos ou não informados."
        }
      },
      "required": [
        "error"
      ]
    }
  }
}